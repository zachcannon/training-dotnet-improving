@{
    ViewBag.Title = "Home Page";
}

<head>
    <title>Home Page</title>   
    @Scripts.Render("~/Scripts/Index.js")
</head>

<body>
    <div>
        <h3>All Tasks:</h3>
        <ul id="allTasks"></ul>
    </div>

    <div>
        <h3>Search task by title:</h3>
        <input type="text" id="taskTitle" size="10" />
        <input type="button" value="Search" onclick="find();" />

        <p id="singleTask"></p>
    </div>

    <div>
        <form id="newTaskForm" method="post">
            <h3>Create a new Task</h3>
            <p>
                <label for="taskTitle">Title:</label>
                <input type="text" name="Title" />
            </p>
            <p>
                <label for="taskBody">Body:</label>
                <input type="text" name="Body" />
            </p>
            <input type="button" id="saveTask" value="Save" />
        </form>

        <p id="singleAddTask"></p>
    </div>

</body>
